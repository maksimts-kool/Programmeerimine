@model IEnumerable<Tund12.Models.Course>

@{
    ViewData["Title"] = "Kursuste haldus";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-auto">
            <a asp-action="CreateCourse" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Lisa kursus
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nimetus</th>
                    <th>Keel</th>
                    <th>Tase</th>
                    <th>Kirjeldus</th>
                    <th>Koolitusi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    var badgeClass = course.Tase switch
                    {
                        "A1" or "A2" => "bg-success",
                        "B1" or "B2" => "bg-warning text-dark",
                        "C1" or "C2" => "bg-danger",
                        _ => "bg-secondary"
                    };

                    <tr>
                        <td><strong>@course.Nimetus</strong></td>
                        <td>
                            <span class="badge bg-info">@course.Keel</span>
                        </td>
                        <td>
                            <span class="badge @badgeClass">@course.Tase</span>
                        </td>
                        <td>
                            @(course.Kirjeldus?.Length > 50
                                                    ? course.Kirjeldus.Substring(0, 50) + "..."
                                                    : course.Kirjeldus)
                        </td>
                        <td>
                            <span class="badge bg-primary">
                                @course.Trainings.Count
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Kursusi pole veel lisatud.
        </div>
    }
</div>