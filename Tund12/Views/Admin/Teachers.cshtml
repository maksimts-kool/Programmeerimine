@model IEnumerable<Tund12.Models.Teacher>

@{
    ViewData["Title"] = "Õpetajate haldus";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-auto">
            <a asp-action="CreateTeacher" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Lisa õpetaja
            </a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var teacher in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@teacher.Nimi</h5>
                        <p class="card-text">
                            <strong>E-post:</strong> @teacher.User?.Email<br />
                            <strong>Kvalifikatsioon:</strong> @teacher.Kvalifikatsioon<br />
                            <strong>Koolitusi:</strong> @teacher.Trainings.Count
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>