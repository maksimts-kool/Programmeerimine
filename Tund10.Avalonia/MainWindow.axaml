<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Tund10.Avalonia.MainWindow"
        Title="Auto Register"
        Width="1400" Height="600"
        WindowStartupLocation="CenterScreen">

    <Window.Styles>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.warning">
            <Setter Property="Background" Value="DarkOrange"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.danger">
            <Setter Property="Background" Value="IndianRed"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.success">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.purple">
            <Setter Property="Background" Value="#6F42C1"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="StackPanel.actions">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Spacing" Value="10"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*" Margin="10">
        <Grid ColumnDefinitions="*,Auto,Auto,Auto">
            <StackPanel Name="LoginPanel" Orientation="Horizontal" Spacing="10">
                <TextBox Name="LoginNameBox" Watermark="Kasutajanimi" Width="150"/>
                <TextBox Name="LoginPasswordBox" Watermark="Parool" Width="150"/>
                <Button Name="LoginBtn" Content="Logi sisse" Classes="primary" Click="LoginBtn_Click"/>
            </StackPanel>
            <Button Name="LogoutBtn" Content="Log Out" Classes="danger" Click="LogoutBtn_Click" IsVisible="False"/>
            <ComboBox Name="LanguageCombo" Width="80" Grid.Column="2" HorizontalAlignment="Right" Margin="0,0,10,0" SelectionChanged="LanguageCombo_SelectionChanged">
                <ComboBoxItem Content="EE"/>
                <ComboBoxItem Content="RU"/>
                <ComboBoxItem Content="UK"/>
            </ComboBox>
            <TextBox Name="SearchBox" Width="250" Grid.Column="3" HorizontalAlignment="Right" 
                     Watermark="Otsi..." KeyUp="SearchBox_KeyUp"/>
        </Grid>

        
        <TabControl Grid.Row="1" x:Name="MainTabs" Margin="5">
            <TabItem Header="OMANIKUD">
                <Grid RowDefinitions="*,Auto" Margin="10">
                    <DataGrid Name="OwnersGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Nimi" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="150"/>
                            <DataGridTemplateColumn Header="Tegevus" Width="320"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Name="OwnerActionPanel" Grid.Row="1" Classes="actions" IsVisible="False">
                        <TextBox Name="OwnerNameBox" Watermark="Nimi" Width="200"/>
                        <TextBox Name="OwnerPhoneBox" Watermark="Telefon" Width="150"/>
                        <Button Name="AddOwnerBtn" Content="Lisa" Classes="primary" Click="AddOwnerBtn_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="AUTOD">
                <Grid Margin="10">
                    <DataGrid Name="CarsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Bränd" Binding="{Binding Brand}" Width="100"/>
                            <DataGridTextColumn Header="Mudel" Binding="{Binding Model}" Width="100"/>
                            <DataGridTextColumn Header="Reg Number" Binding="{Binding RegistrationNumber}" Width="120"/>
                            <DataGridTemplateColumn Header="Omanik" Width="*"/>
                            <DataGridTemplateColumn Header="Tegevus" Width="360"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="WORKERS">
                <Grid RowDefinitions="*,Auto" Margin="10">
                    <DataGrid Name="WorkersGrid" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Nimi" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Roll" Binding="{Binding Role}" Width="150"/>
                            <DataGridTemplateColumn Header="Tegevus" Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Name="WorkerActionPanel" Grid.Row="1" Classes="actions" IsVisible="False">
                        <TextBox Name="WorkerNameBox" Watermark="Name" Width="200"/>
                        <TextBox Name="WorkerPasswordBox" Watermark="Password" Width="150"/>
                        <ComboBox Name="WorkerRoleCombo" Width="150"/>
                        <Button Name="AddWorkerBtn" Content="Add" Classes="primary" Click="AddWorkerBtn_Click"/>
                        <Button Name="ManageRolesBtn" Content="Manage Roles" Classes="warning" Click="ManageRolesBtn_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="TEENUSED &amp; LOGID">
                <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="10">
                    <DataGrid Name="ServicesGrid" Height="150" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Teenus Nimi" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Hind" Binding="{Binding Price}" Width="100"/>
                            <DataGridTemplateColumn Header="Tegevus" Width="180"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Name="ServiceActionPanel" Grid.Row="1" Orientation="Horizontal" Spacing="10" 
                                Margin="0,10,0,20" IsVisible="False">
                        <TextBox Name="ServiceNameBox" Watermark="Teenus Nimi" Width="200"/>
                        <TextBox Name="ServicePriceBox" Watermark="Hind" Width="100"/>
                        <Button Name="AddServiceBtn" Content="Lisa" Classes="primary" Click="AddServiceBtn_Click"/>
                    </StackPanel>
                    <DataGrid Name="LogsGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" ColumnWidth="*">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTemplateColumn Header="Auto" Width="*"/>
                            <DataGridTemplateColumn Header="Teenus" Width="*"/>
                            <DataGridTextColumn Header="Töötaja" Binding="{Binding Worker}" Width="120"/>
                            <DataGridTextColumn Header="Kuupäev" Binding="{Binding DateTimeDisplay}" Width="140"/>
                            <DataGridTextColumn Header="Kilomeetrid" Binding="{Binding Mileage}" Width="100"/>
                            <DataGridTextColumn Header="Staatus" Binding="{Binding Status}" Width="100"/>
                            <DataGridTemplateColumn Header="Tegevus" Width="200"/>
                            <DataGridTemplateColumn Header="Tegevus 2" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>