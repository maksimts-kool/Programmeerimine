<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Tund10.Avalonia.AddCarWindow"
        Title="Lisa auto"
        Width="400" Height="250"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Name="OwnerNameText" FontWeight="Bold" FontSize="16"/>
        
        <TextBox Name="CarBrandBox" Watermark="Bränd" Width="350"/>
        <TextBox Name="CarModelBox" Watermark="Mudel" Width="350"/>
        <TextBox Name="CarRegBox" Watermark="Registreerimisnumber" Width="350"/>
        
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="SaveBtn" Content="Salvesta" Width="100" Click="SaveBtn_Click"/>
            <Button Name="CancelBtn" Content="Tühista" Width="100" Click="CancelBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
