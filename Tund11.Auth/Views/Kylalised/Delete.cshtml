@model Kylaline

@{
    ViewData["Title"] = "Kustuta k端laline";
    var participationStatus = ViewData["ParticipationStatus"] as bool?;
}

<h1>Kustuta k端laline</h1>

<h3>Kas oled kindel, et tahad kustutada?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nimi</dt>
        <dd class="col-sm-10">@Model.Nimi</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">P端ha</dt>
        <dd class="col-sm-10">@Model.Pyha?.Nimetus</dd>

        <dt class="col-sm-2">Osalemine</dt>
        <dd class="col-sm-10">
            @if (participationStatus == true)
            {
                <span class="badge bg-success">Tuleb</span>
            }
            else if (participationStatus == false)
            {
                <span class="badge bg-danger">Ei tule</span>
            }
            else
            {
                <span class="badge bg-secondary">Pole vastanud</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Kustuta</button>
        <a class="btn btn-secondary" asp-action="Index">T端hista</a>
    </form>
</div>