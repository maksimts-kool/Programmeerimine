@model Kylaline

@{
    ViewData["Title"] = "Külalise detailid";
    var participationStatus = ViewData["ParticipationStatus"] as bool?;
}

<h1>Külalise detailid</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nimi</dt>
        <dd class="col-sm-10">@Model.Nimi</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Püha</dt>
        <dd class="col-sm-10">@Model.Pyha?.Nimetus</dd>

        <dt class="col-sm-2">Osalemine</dt>
        <dd class="col-sm-10">
            @if (participationStatus == true)
            {
                <span class="badge bg-success">Tuleb</span>
            }
            else if (participationStatus == false)
            {
                <span class="badge bg-danger">Ei tule</span>
            }
            else
            {
                <span class="badge bg-secondary">Pole vastanud</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Muuda</a> |
    <a asp-action="Index">Tagasi</a>
</div>