@model Kylaline

@{
    ViewData["Title"] = Localizer["AddGuest"];
}

<h1>@Localizer["AddGuest"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Nimi" class="form-label"></label>
                <input asp-for="Nimi" class="form-control" />
                <span asp-validation-for="Nimi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PyhaId" class="form-label">@Localizer["Holiday"]</label>
                <select asp-for="PyhaId" class="form-select" asp-items="@(ViewData["PyhaId"] as SelectList)">
                    <option value="">@Localizer["SelectEvent"]</option>
                </select>
                <span asp-validation-for="PyhaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer["WhoAttends"]</label>
                <select name="participationStatus" class="form-select">
                    <option value="">@Localizer["NotSet"]</option>
                    <option value="willbe">@Localizer["WillCome"]</option>
                    <option value="wontbe">@Localizer["WontCome"]</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">@Localizer["Save"]</button>
            <a class="btn btn-secondary" asp-action="Index">@Localizer["Back"]</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}