@model Ankeet

@{
    ViewData["Title"] = Localizer["ThankYouTitle"];
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="alert alert-success" role="alert">
                <h1>@Localizer["ThankYouTitle"]</h1>
                <hr />
                <p class="lead">@Localizer["ThankYouForSurvey", Model.Nimi]</p>
                <p>@Localizer["ResponseSaved"]</p>

                @if (Model.OnOsaleb)
                {
                    <div class="alert alert-info mt-3" role="alert">
                        <h5>ðŸŽ‰ @Localizer["Congrats"]</h5>
                        <p>@Localizer["HappyYouCome"]</p>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-3" role="alert">
                        <h5>ðŸ˜¢ @Localizer["SorryToHear"]</h5>
                        <p>@Localizer["SadYouCantCome"]</p>
                    </div>
                }

                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">@Localizer["SurveyDetails"]</h5>
                        <dl class="row">
                            <dt class="col-sm-4">@Localizer["Event"]:</dt>
                            <dd class="col-sm-8">@Model.Pyha?.Nimetus</dd>

                            <dt class="col-sm-4">@Localizer["SurveyName"]:</dt>
                            <dd class="col-sm-8">@Model.Nimi</dd>

                            <dt class="col-sm-4">@Localizer["YourAnswer"]:</dt>
                            <dd class="col-sm-8">@(Model.OnOsaleb? Localizer["YesWillCome"] : Localizer["NoWontCome"])
                            </dd>

                            <dt class="col-sm-4">@Localizer["Email"]:</dt>
                            <dd class="col-sm-8">@Model.Epost</dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-4">
                    <a class="btn btn-primary" asp-area="" asp-controller="Home"
                        asp-action="Index">@Localizer["BackToHome"]</a>
                </div>
            </div>
        </div>
    </div>
</div>