@{
    ViewData["Title"] = Localizer["HomePage"];
}

<div class="container">
    <!-- Hero Section -->
    <div class="row justify-content-center mt-5 mb-5">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="display-3 fw-bold text-primary mb-3">@Localizer["WelcomeToPikookLaad"]</h1>
                <p class="lead text-muted fs-4">@Localizer["HomeSubtitle"]</p>
            </div>

            <!-- Feature Cards -->
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <span class="display-4">🎉</span>
                            </div>
                            <h3 class="card-title h4 mb-3">@Localizer["Holidays"]</h3>
                            <p class="card-text text-muted mb-4">@Localizer["HolidaysCardDescription"]</p>
                            <a asp-controller="Pyhad" asp-action="Index" class="btn btn-primary btn-lg w-100">
                                @Localizer["ViewHolidays"]
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <span class="display-4">📝</span>
                            </div>
                            <h3 class="card-title h4 mb-3">@Localizer["Survey"]</h3>
                            <p class="card-text text-muted mb-4">@Localizer["SurveyCardDescription"]</p>
                            <a asp-controller="Ankeet" asp-action="Create" class="btn btn-success btn-lg w-100">
                                @Localizer["FillSurvey"]
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <span class="display-4">👥</span>
                            </div>
                            <h3 class="card-title h4 mb-3">@Localizer["Guests"]</h3>
                            <p class="card-text text-muted mb-4">@Localizer["GuestsCardDescription"]</p>
                            <a asp-controller="Kylalised" asp-action="Index" class="btn btn-info btn-lg w-100">
                                @Localizer["ViewGuests"]
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body text-center p-4">
                            <div class="mb-3">
                                <span class="display-4">🔒</span>
                            </div>
                            <h3 class="card-title h4 mb-3">@Localizer["Privacy"]</h3>
                            <p class="card-text text-muted mb-4">@Localizer["PrivacyCardDescription"]</p>
                            <a asp-controller="Home" asp-action="Privacy" class="btn btn-secondary btn-lg w-100">
                                @Localizer["PrivacyPolicy"]
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Info Section -->
            <div class="row mt-5">
                <div class="col-12">
                    <div class="alert alert-info" role="alert">
                        <h4 class="alert-heading">ℹ️ @Localizer["HomeHowToStart"]</h4>
                        <hr>
                        <p class="mb-0">
                            1. <strong>@Localizer["ViewHolidays"]</strong> - @Localizer["StartViewHolidaysDesc"]<br>
                            2. <strong>@Localizer["FillSurvey"]</strong> - @Localizer["StartFillSurveyDesc"]<br>
                            3. <strong>@Localizer["GetConfirmation"]</strong> - @Localizer["StartGetConfirmationDesc"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2) !important;
    }
</style>