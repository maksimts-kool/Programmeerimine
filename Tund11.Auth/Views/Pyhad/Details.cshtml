@model Pyha

@{
    ViewData["Title"] = Localizer["HolidayDetails"];
}

<h1>@Localizer["HolidayDetails"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nimetus)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nimetus)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Kuupaev)</dt>
        <dd class="col-sm-10">@Model.Kuupaev.ToString("yyyy-MM-dd")</dd>
    </dl>

    <h4>@Localizer["Guests"]</h4>

    @if (Model.Kylalised is null || !Model.Kylalised.Any())
    {
        <p>@Localizer["NoGuestsYet"]</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Localizer["Name"]</th>
                    <th>@Localizer["Email"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.Kylalised.OrderBy(x => x.Nimi))
                {
                    <tr>
                        <td>@k.Nimi</td>
                        <td>@k.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back"]</a>
</div>