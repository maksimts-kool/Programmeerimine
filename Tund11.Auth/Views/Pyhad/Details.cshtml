@model Pyha

@{
    ViewData["Title"] = "P端ha detailid";
}

<h1>P端ha detailid</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nimetus)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nimetus)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Kuupaev)</dt>
        <dd class="col-sm-10">@Model.Kuupaev.ToString("yyyy-MM-dd")</dd>
    </dl>

    <h4>K端lalised</h4>

    @if (Model.Kylalised is null || !Model.Kylalised.Any())
    {
        <p>Hetkel k端lalisi pole.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nimi</th>
                    <th>Email</th>
                    <th>Kutse</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model.Kylalised.OrderBy(x => x.Nimi))
                {
                    <tr>
                        <td>@k.Nimi</td>
                        <td>@k.Email</td>
                        <td>@(k.OnKutse ? "Jah" : "Ei")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Muuda</a> |
    <a asp-action="Index">Tagasi</a>
</div>