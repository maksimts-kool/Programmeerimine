@model Pyha

@{
    ViewData["Title"] = Localizer["DeleteHoliday"];
}

<h1>@Localizer["DeleteHoliday"]</h1>

<h3>@Localizer["AreYouSureDelete"]</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nimetus)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nimetus)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Kuupaev)</dt>
        <dd class="col-sm-10">@Model.Kuupaev.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">@Localizer["Delete"]</button>
        <a class="btn btn-secondary" asp-action="Index">@Localizer["Cancel"]</a>
    </form>
</div>