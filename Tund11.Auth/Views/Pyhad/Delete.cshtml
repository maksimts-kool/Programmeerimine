@model Pyha

@{
    ViewData["Title"] = "Kustuta püha";
}

<h1>Kustuta püha</h1>

<h3>Kas oled kindel, et tahad kustutada?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nimetus)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nimetus)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Kuupaev)</dt>
        <dd class="col-sm-10">@Model.Kuupaev.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Kustuta</button>
        <a class="btn btn-secondary" asp-action="Index">Tühista</a>
    </form>
</div>