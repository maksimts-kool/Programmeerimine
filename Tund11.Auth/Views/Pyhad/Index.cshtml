@model IEnumerable<Pyha>

@{
    ViewData["Title"] = Localizer["Holidays"];
}

<h1>@Localizer["Holidays"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">@Localizer["AddHoliday"]</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Localizer["Title"]</th>
            <th>@Localizer["Date"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nimetus)</td>
                <td>@item.Kuupaev.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">@Localizer["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@Localizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@Localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>