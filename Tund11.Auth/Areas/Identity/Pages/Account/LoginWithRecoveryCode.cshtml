@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = Localizer["Identity_LoginWithRecoveryCode_Title"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    @Localizer["Identity_LoginWithRecoveryCode_Description"]
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off"
                    placeholder="@Localizer["Identity_RecoveryCodePlaceholder"]" />
                <label asp-for="Input.RecoveryCode" class="form-label"></label>
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Login"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}