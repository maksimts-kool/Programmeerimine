@page
@model ExternalLoginModel
@{
    ViewData["Title"] = Localizer["Register"];
    var providerDisplayName = Model.ProviderDisplayName ?? Localizer["Identity_ExternalProvider"];
}

<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">@Localizer["Identity_ExternalLogin_AssociateTitle", providerDisplayName]</h2>
<hr />

<p id="external-login-description" class="text-info">
    @Localizer["Identity_ExternalLogin_SuccessfullyAuthenticatedWith"] <strong>@providerDisplayName</strong>.
    @Localizer["Identity_ExternalLogin_PleaseEnterEmailToFinish"]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email"
                    placeholder="@Localizer["Identity_EmailPlaceholder"]" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}