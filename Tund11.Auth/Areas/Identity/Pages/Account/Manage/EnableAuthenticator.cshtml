@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = Localizer["Identity_EnableAuthenticator_Title"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div>
    <p>@Localizer["Identity_EnableAuthenticator_Intro"]</p>
    <ol class="list">
        <li>
            <p>
                @Localizer["Identity_EnableAuthenticator_DownloadAppPrefix"] Microsoft Authenticator
                @Localizer["Identity_EnableAuthenticator_DownloadAppFor"]
                <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> and
                <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a> or
                Google Authenticator @Localizer["Identity_EnableAuthenticator_DownloadAppFor"]
                <a
                    href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">Android</a>
                and
                <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
            </p>
        </li>
        <li>
            <p>@Localizer["Identity_EnableAuthenticator_ScanQrPrefix"] <kbd>@Model.SharedKey</kbd>
                @Localizer["Identity_EnableAuthenticator_ScanQrSuffix"]</p>
            <div class="alert alert-info">@Localizer["Identity_EnableAuthenticator_LearnHowPrefix"] <a
                    href="https://go.microsoft.com/fwlink/?Linkid=852423">@Localizer["Identity_EnableAuthenticator_EnableQrCodeGenerationLink"]</a>.
            </div>
            <div id="qrCode"></div>
            <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
        </li>
        <li>
            <p>
                @Localizer["Identity_EnableAuthenticator_AfterScan"]
            </p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Code" class="form-control" autocomplete="off"
                                placeholder="@Localizer["Identity_VerificationCodePlaceholder"]" />
                            <label asp-for="Input.Code"
                                class="control-label form-label">@Localizer["Identity_VerificationCode"]</label>
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit"
                            class="w-100 btn btn-lg btn-primary">@Localizer["Identity_Verify"]</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}