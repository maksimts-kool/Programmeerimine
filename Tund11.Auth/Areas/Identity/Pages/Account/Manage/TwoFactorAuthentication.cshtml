@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = Localizer["Identity_ManageTwoFactor_Title"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>@Localizer["Identity_ManageTwoFactor_NoRecoveryCodesLeft"]</strong>
                    <p>@Localizer["Identity_ManageTwoFactor_MustGenerateNewRecoveryCodesPrefix"] <a
                            asp-page="./GenerateRecoveryCodes">@Localizer["Identity_ManageTwoFactor_GenerateNewRecoveryCodesLink"]</a>
                        @Localizer["Identity_ManageTwoFactor_MustGenerateNewRecoveryCodesSuffix"]</p>
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>@Localizer["Identity_ManageTwoFactor_OneRecoveryCodeLeft"]</strong>
                    <p>@Localizer["Identity_ManageTwoFactor_YouCanPrefix"] <a
                            asp-page="./GenerateRecoveryCodes">@Localizer["Identity_ManageTwoFactor_GenerateNewRecoveryCodesLink"]</a>.
                    </p>
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>@Localizer["Identity_ManageTwoFactor_RecoveryCodesLeft", Model.RecoveryCodesLeft]</strong>
                    <p>@Localizer["Identity_ManageTwoFactor_YouShouldPrefix"] <a
                            asp-page="./GenerateRecoveryCodes">@Localizer["Identity_ManageTwoFactor_GenerateNewRecoveryCodesLink"]</a>.
                    </p>
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">@Localizer["Identity_ManageTwoFactor_ForgetThisBrowser"]</button>
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">@Localizer["Identity_ManageTwoFactor_Disable2FA"]</a>
            <a asp-page="./GenerateRecoveryCodes"
                class="btn btn-primary">@Localizer["Identity_ManageTwoFactor_ResetRecoveryCodes"]</a>
        }

        <h4>@Localizer["Identity_ManageTwoFactor_AuthenticatorApp"]</h4>
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator"
                class="btn btn-primary">@Localizer["Identity_ManageTwoFactor_AddAuthenticatorApp"]</a>
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator"
                class="btn btn-primary">@Localizer["Identity_ManageTwoFactor_SetUpAuthenticatorApp"]</a>
            <a id="reset-authenticator" asp-page="./ResetAuthenticator"
                class="btn btn-primary">@Localizer["Identity_ManageTwoFactor_ResetAuthenticatorApp"]</a>
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>@Localizer["Identity_ManageTwoFactor_PrivacyPolicyNotAccepted"]</strong>
            <p>@Localizer["Identity_ManageTwoFactor_AcceptPolicyToEnable2FA"]</p>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}