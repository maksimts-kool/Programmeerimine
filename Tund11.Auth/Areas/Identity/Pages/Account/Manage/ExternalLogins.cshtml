@page
@model ExternalLoginsModel
@{
    ViewData["Title"] = Localizer["Identity_ManageExternalLogins_Title"];
    ViewData["ActivePage"] = ManageNavPages.ExternalLogins;
}

<partial name="_StatusMessage" for="StatusMessage" />
@if (Model.CurrentLogins?.Count > 0)
{
    <h3>@Localizer["Identity_ManageExternalLogins_RegisteredLogins"]</h3>
    <table class="table">
        <tbody>
            @foreach (var login in Model.CurrentLogins)
            {
                var providerDisplayName = login.ProviderDisplayName ?? login.LoginProvider;
                <tr>
                    <td id="@($"login-provider-{login.LoginProvider}")">@providerDisplayName</td>
                    <td>
                        @if (Model.ShowRemoveButton)
                        {
                            <form id="@($"remove-login-{login.LoginProvider}")" asp-page-handler="RemoveLogin" method="post">
                                <div>
                                    <input asp-for="@login.LoginProvider" name="LoginProvider" type="hidden" />
                                    <input asp-for="@login.ProviderKey" name="ProviderKey" type="hidden" />
                                    <button type="submit" class="btn btn-primary"
                                        title="@Localizer["Identity_ManageExternalLogins_RemoveLoginTitle", providerDisplayName]">@Localizer["Remove"]</button>
                                </div>
                            </form>
                        }
                        else
                        {
                            @: &nbsp;
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (Model.OtherLogins?.Count > 0)
{
    <h4>@Localizer["Identity_ManageExternalLogins_AddAnotherService"]</h4>
    <hr />
    <form id="link-login-form" asp-page-handler="LinkLogin" method="post" class="form-horizontal">
        <div id="socialLoginList">
            <p>
                @foreach (var provider in Model.OtherLogins)
                {
                    var providerDisplayName = provider.DisplayName ?? provider.Name;
                    <button id="@($"link-login-button-{provider.Name}")" type="submit" class="btn btn-primary" name="provider"
                        value="@provider.Name"
                        title="@Localizer["Identity_ManageExternalLogins_LinkLoginTitle", providerDisplayName]">@providerDisplayName</button>
                }
            </p>
        </div>
    </form>
}